.app-layout
  height 100vh
  overflow hidden
  cursor default
  display flex
  flex-flow column
  .app-splitview
    flex 1
    .app-pass-context
      height 100%
      display flex
      flex-flow column
  .app-topbar
    height 48px
    position relative
    flex 0 0 48px
    .app-menu-button
      display inline-block
      float left
      +RTL()
        float right
    .app-button
      display inline-block
      height 48px
      width 48px
      line-height 48px
      float left
      +RTL()
        float right
    .app-title
      display inline-block
      padding 0 12px
      line-height 48px
      float left
      width calc(100vw - 96px)
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
      box-sizing border-box
      +RTL()
        float right
    .app-language-title
      display inline-block
      line-height 48px
      padding 0 12px
      text-align center
      width calc(50% - 48px)
      box-sizing border-box
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
      float left
      +RTL()
        float right
      &:hover, &:focus
        background-color rgba(255, 255, 255, 0.1)
    .app-ocr-top
      .app-language-title
        width calc(50% - 72px)
