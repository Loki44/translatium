.app-choose-a-language-page
  height 100%
  overflow-y auto
  .app-item
    padding 8px 16px
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
    box-sizing border-box
    width 100%
    float left
    +RTL()
      float right
    @media screen and (min-width: 600px)
      width 50%
    @media screen and (min-width: 1200px)
      width 33.3%
  .app-group-item-container
    padding 12px
    box-sizing border-box
    width 100%
    float left
  .app-group-item
    height 40px
    text-align center
    line-height 40px
    color #ffffff
    display inline-block
    text-transform uppercase
    padding 0 12px
