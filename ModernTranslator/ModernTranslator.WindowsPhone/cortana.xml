<?xml version="1.0" encoding="utf-8"?>

<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.1">

  <CommandSet xml:lang="en-us" Name="ModernTranslator">
    <CommandPrefix>Translate</CommandPrefix>
    <Example>Translate "Hello" to Chinese</Example>

    <Command Name="translate">
      <Example>'good bye' to Vietnamese</Example>
      <ListenFor>{inputText} [to] {outputLang}</ListenFor>
      <Feedback>Translating {inputText} to {outputLang}</Feedback>
      <Navigate/>
    </Command>

    <PhraseList Label="outputLang">
    </PhraseList>

    <PhraseTopic Label="inputText">
    </PhraseTopic>

  </CommandSet>

</VoiceCommands>
