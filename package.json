{
  "name": "modern-translator",
  "description": "Translator app for Mac & PC.",
  "version": "6.6.2",
  "main": "public/electron.js",
  "repository": "https://github.com/modern-translator/modern-translator",
  "author": {
    "name": "Quang Lam",
    "email": "quang.lam2807@gmail.com",
    "url": "https://quanglam.me"
  },
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "engines": {
    "node": "8"
  },
  "scripts": {
    "install": "npm run install:cordova",
    "install:cordova": "cd cordova && npm install",
    "prepare:cordova": "cd cordova && cordova prepare",
    "start": "cross-env REACT_APP_VERSION=dev REACT_APP_GOOGLE_ENDPOINT=http://localhost:3000 BROWSER=none react-scripts start",
    "electron-dev": "concurrently \"yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "cross-env REACT_APP_VERSION=6.6.2 react-scripts build && node add-bom.js",
    "test-ui": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "pack": "electron-builder --dir",
    "dist": "yarn build && electron-builder",
    "lint": "eslint src public --ext js"
  },
  "dependencies": {
    "electron-is-dev": "^0.2.0",
    "menubar": "^5.2.3"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "classnames": "^2.2.5",
    "concurrently": "^3.5.0",
    "cross-env": "^5.0.1",
    "electron": "^1.6.11",
    "electron-builder": "^19.11.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "history": "^4.6.3",
    "material-ui": "^1.0.0-alpha.20",
    "material-ui-icons": "^1.0.0-alpha.19",
    "pouchdb-browser": "^6.2.0",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-fastclick": "^3.0.2",
    "react-redux": "^5.0.5",
    "react-router": "^3.0.5",
    "react-router-redux": "^4.0.8",
    "react-scripts": "^1.0.10",
    "recordrtc": "^5.4.2",
    "redux": "^3.7.1",
    "redux-thunk": "^2.2.0",
    "shortid": "^2.2.8",
    "wait-on": "^2.0.2",
    "xml2js": "^0.4.17"
  },
  "homepage": "./",
  "proxy": {
    "/m/translate": {
      "target": "https://translate.google.com",
      "changeOrigin": true
    },
    "/translate_a": {
      "target": "https://translate.google.com",
      "changeOrigin": true
    },
    "/translate_tts": {
      "target": "https://translate.google.com",
      "changeOrigin": true,
      "ws": true
    },
    "/speech-api": {
      "target": "https://www.google.com",
      "changeOrigin": true
    }
  },
  "build": {
    "appId": "com.moderntranslator.app",
    "productName": "Modern Translator",
    "directories": {
      "buildResources": "build-resources"
    },
    "linux": {
      "category": "Education",
      "packageCategory": "education",
      "target": [
        "deb",
        "rpm",
        "pacman"
      ]
    },
    "mac": {
      "target": ["mas", "zip"]
    }
  }
}
